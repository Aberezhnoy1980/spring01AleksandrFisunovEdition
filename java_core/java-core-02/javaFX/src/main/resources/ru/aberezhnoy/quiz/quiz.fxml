<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/15" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.aberezhnoy.quiz.GuiController">


    <TextArea fx:id="questionArea" editable="false" focusTraversable="false" VBox.vgrow="ALWAYS" />
    <HBox>
        <RadioButton fx:id="answer1" maxWidth="1.7976931348623157E308" prefHeight="26.0" prefWidth="83.0" HBox.hgrow="ALWAYS">
         <toggleGroup>
            <ToggleGroup fx:id="answers" />
         </toggleGroup></RadioButton>
        <RadioButton fx:id="answer2" maxWidth="1.7976931348623157E308" prefHeight="26.0" prefWidth="83.0" toggleGroup="$answers" HBox.hgrow="ALWAYS" />
        <RadioButton fx:id="answer3" maxWidth="1.7976931348623157E308" prefHeight="26.0" prefWidth="83.0" toggleGroup="$answers" HBox.hgrow="ALWAYS" />
        <RadioButton fx:id="answer4" maxWidth="1.7976931348623157E308" prefHeight="26.0" prefWidth="83.0" toggleGroup="$answers" HBox.hgrow="ALWAYS" />
        <Button onAction="#tryToAnswer" text="Answer" onContextMenuRequested="#show" />
    </HBox>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>
